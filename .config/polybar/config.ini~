include-file = ~/.config/polybar/modules.ini

[settings]
format-underline = ${color.darkblue}
format-background = ${color.bg2}
format-padding = 1

[bar/main]
height = 30
line-size = 3

enable-ipc = true

background = ${color.bg}
foreground = ${color.fg}

module-margin-left = 0
module-margin-right = 1

font-0 = Hack:size=12
font-1 = JoyPixels:scale=10:antialias=true
font-2 = FontAwesome 6 Free:pixelsize=12:style=Solid

modules-left = bspwm xwindow
modules-right = cpu memory updates battery date arrow

;tray-position = right
;tray-background = ${color.bg2}

wm-restack = bspwm

cursor-click = pointer
cursor-scroll = ns-resize

[bar/tray]
;monitor-strict = false

width = 20
height = 20

;offset-x = 98
;offset values only dtermine the position of bar in the screen set it accordingly to your need

;offset-y = 35

;override-redirect = true
;to make offset vales to work override-direct value must be true

;fixed-center = true

